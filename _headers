# STEP11: Netlify-style headers (optional)

/*
  Cache-Control: public, max-age=3600

  # STEP18: baseline security headers (recommended)
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=(), usb=()
  # STEP18: strict CSP for static site (adjust if you add external scripts/fonts)
  Content-Security-Policy: default-src 'self'; base-uri 'self'; object-src 'none'; frame-ancestors 'none'; img-src 'self' data:; style-src 'self'; script-src 'self'; font-src 'self'; connect-src 'self'
  # Note: enable HSTS only if you serve HTTPS on your custom domain
  # Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

/assets/images/*
  Cache-Control: public, max-age=2592000, immutable

/assets/icons/*
  Cache-Control: public, max-age=2592000, immutable

/css/*
  Cache-Control: public, max-age=604800

/js/*
  Cache-Control: public, max-age=604800
